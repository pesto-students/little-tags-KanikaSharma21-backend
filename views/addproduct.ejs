<!DOCTYPE html>
<html lang="en">
<head>
    <title>Full cart</title>
    <!-- Latest compiled and minified CSS -->
   

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
<!--Data Table-->
<script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<!--Export table buttons-->

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



</head>
<body>
    <%- include('./partial/top-navbar.ejs') %>
  
    <%- include('./partial/sidebar.ejs') %>
  
    <div class="container">
        <div class="row">
           
            <div class="col-lg-3 col-md-offset-3"></div>
            <div class="col-lg-6 col-md-offset-3" >
                <div class="row header" style="text-align:center;color:darkblue; font-weight: 600; text-decoration: underline; justify-content: center; margin: 0.5em 0em;  text-transform: uppercase;">
 

                    <h3>Add product</h3>
                    </div>
                <form method="post" action="api/product/add" style="border:1px solid #dfdddd;  padding:1em; border-radius: 10px;">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="category">Category: </label>
                                <select class="form-control" id="exampleFormControlSelect1">
                                     
            <% for(var i=0; i < categoryList.length; i++) { %>
                <option><%= categoryList[i].category %></option>
             <% } %>
                                  </select>
                            </div>
                            <div class="form-group">
                                <label for="brand">Brand: </label>
                                <input type="text" name="brand" id="brand" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="averageRating">Average rating: </label>
                                <input type="number" step="any" name="averageRating" id="averageRating" class="form-control">
                            </div> 
                             <div class="form-group">
                                <label for="totalRating">Total rating: </label>
                                <input type="number" step="any" id="totalRating" class="form-control" name="totalRating">
                            </div>
                            <div class="form-group">
                                <label for="title">Title </label>
                                <input type="text" name="title" id="title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="discountPercentage">Discount (%) </label>
                                <input type="number" id="discountPercentage" step="any" class="form-control" name="discountPercentage">
                            </div>
                            <div class="form-group">
                                <label for="actualPrice">Actual Price:  (Rs.)  </label>
                                <input type="number" id="actualPrice" class="form-control" name="actualPrice">
                            </div>
                            
                            <div class="form-group">
                                <label for="image">Image: </label>
                                <input type="text" id="image" class="form-control" name="image">
                            </div>
                            <div class="form-group">
                                <label for="subImages">Sub images: </label>
                                <textarea type="text" id="subImages" class="form-control" name="subImages">
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label for="description">Description: </label>
                                <textarea type="text" id="description" class="form-control" name="description"></textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-primary" style="background-color: darkblue;">Save</button>
                        </div>
                    </div>
                </form>
                
                        
            </div>
        </div>
        
        <% if (show_modal ) { %>
            
            <%- include('./partial/400.ejs',{error:error}) %>
        
            <% } %>
    </div>
    
</body>
</html>