<!DOCTYPE html>   
<html lang="en">   
<head>   
<meta charset="utf-8">   
<title>Full cart</title>   
<meta name="description" content="Bootstrap.">  
<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">   
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>  
<body style="margin:10px auto">
  
  <%- include('./partial/sidebar.ejs') %>
<div class="container">
<div class="row header" style="text-align:center;color:green; font-weight: 600;">
 

<h3>Products list</h3>
</div>
<table id="myTable" class="table table-striped" >  
        <thead>  
          <tr>  
            <th>#</th>  
            <th>TITLE</th>  
            <th>BRAND</th>  
            <th>STATUS</th>
            <th>AVERAGE RATING</th>  
            <th>TOTAL RATING</th>  
            <th>IMAGE</th>  
            <th>SUBIMAGES</th>  
            <th>SELLING PRICE</th>  
            <th>ACTUAL PRICE</th>  
            <th>DESCRIPTION</th>  
            <th>ACTION</th> 

          </tr>  
        </thead>  
        <tbody> 
          <% productList.forEach(function(entry, i, productList){ %>
            <tr> 
              <td> <%= i+1 %></td>
              <td><%= entry.title %></td>
              <td><%= entry.brand %></td>
              <td><%= entry.status %></td>
              <td><%= entry.averageRating %></td>
              <td><%= entry.totalRating %></td>
                <td>
                <img  src=<%= entry.image %> style="width:100%; height:80px" >
            </td>
            <td>
            <% entry.subImages.forEach( function(subImg){ %>
              <div style="margin:5px">
             <img src=<%= subImg %> style="width:100%; height:80px"> 
            </div>
              <% })%>
            </td>
              <td><%= entry.sellingPrice %></td>
              <td><%= entry.actualPrice %></td>
              <td><%= entry.description %></td>
              <td>
                <a href="/product/delete/<%= entry.productId %>">Delete</a>
                <a href="/product/edit/<%= entry.productId %>">Edit</a>
              </td>

            </tr>
            
        <% }) %>
         
        </tbody>  
      </table>  
	  </div>
</body>  
<script>
$(document).ready(function(){
    $('#myTable').dataTable({
      responsive: true,
      "scrollX": true,
      "columnDefs": [
    { "width": "40%", "targets": 10 },

  ]
    });
    
});
</script>
</html> 