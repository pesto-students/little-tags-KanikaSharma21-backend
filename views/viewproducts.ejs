<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/fixedcolumns/3.3.2/js/dataTables.fixedColumns.min.js"></script>
</head>  
<body style="margin:10px auto">
  
  <%- include('./partial/sidebar.ejs') %>
<div class="container">
<div class="row header" style="text-align:center;color:darkblue; font-weight: 600; text-decoration: underline;">
 

<h3>Products list</h3>
</div>
<table id="myTable" class="table table-striped" >  
        <thead>  
          <tr>  
            <th>#</th>  
            <th>TITLE</th>  
            <th>BRAND</th>  
            <th>STATUS</th>
            <th>AVERAGE RATING</th>  
            <th>TOTAL RATING</th>  
            <th>IMAGE</th>  
            
            <th>SELLING PRICE</th>  
            <th>ACTUAL PRICE</th>  
            <th>DESCRIPTION</th>  
            <th>ACTION</th> 

          </tr>  
        </thead>  
        <tbody> 
          <% productList.forEach(function(entry, i, productList){ %>
            <tr> 
              <td> <%= i+1 %></td>
              <td><%= entry.title %></td>
              <td><%= entry.brand %></td>
              <td><%= entry.status %></td>
              <td><%= entry.averageRating %></td>
              <td><%= entry.totalRating %></td>
                <td>
                <img  src=<%= entry.image %> style="width:100%; height:80px" >
            </td>
            
              <td><%= entry.sellingPrice %></td>
              <td><%= entry.actualPrice %></td>
              <td><%= entry.description %></td>
              <td>
                <a href="/product/delete/<%= entry.productId %>">Delete</a>
                <a href="/product/edit/<%= entry.productId %>">Edit</a>
                
              </td>

            </tr>
            
        <% }) %>
         
        </tbody>  
      </table>  
	  </div>
</body>  
<script>
$(document).ready(function(){
    $('#myTable').DataTable({
      responsive: true,
      "scrollX": true,
      "columnDefs": [
      { "width": "10px", "targets": 0 },
      { "width": "200px", "targets": 1 },
      { "width": "100px", "targets": 2 },
      { "width": "70px", "targets": 3 },
      { "width": "70px", "targets": 4 },
      { "width": "510px", "targets": 9 }
    ],
    });
    
});
</script>
