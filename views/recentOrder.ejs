<!DOCTYPE html>   
<html lang="en">   
<head>   
<meta charset="utf-8">   
<title>Full cart</title>   
<meta name="description" content="Bootstrap.">  

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
    <!--Data Table-->
    <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript"  src=" https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript"  src=" https://cdn.datatables.net/buttons/1.2.4/js/dataTables.buttons.min.js"></script>

    <!--Export table buttons-->
    <script type="text/javascript"  src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.24/build/pdfmake.min.js" ></script>
    <script type="text/javascript"  src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.24/build/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.4/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.print.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/fixedcolumns/3.3.2/js/dataTables.fixedColumns.min.js"></script>
<link rel="stylesheet" href="/stylesheets/recentOrder.css">

</head>  
<body>
  <%- include('./partial/top-navbar.ejs') %>
  
  <%- include('./partial/sidebar.ejs') %>
<div class="container">
<div class="row header" style="text-align:center;color:darkblue; font-weight: 600; text-decoration: underline; justify-content: center; margin-bottom: 2em;  text-transform: uppercase;">
 

<h3>Recent Orders </h3>
</div>
<div class="row">
  
  <div class="col-lg-12">
<table id="myTable" class="table table-striped" >  
        <thead>  
          <tr>  
            <th>#</th>  
            <th>TITLE</th>  
            <th>BRAND</th>  
            <th>QUANTITY</th>  
            <th>SIZE</th>  
            <th>AMOUNT PAID</th>  
            <th>ACTUAL PRICE</th>  
            <th>ESTIMATED DELIVERY</th> 
            <th>DELIVERY TYPE</th> 
            <th>PAYMENT TYPE</th>
            <th>Insert Date</th> 

          </tr>  
        </thead>  
        <tbody> 
            <% recentOrderList.forEach(function(entry, i, recentOrderList){ %>
                <tr> 
                  <td> <%= i+1 %></td>
                  <td><%= entry.productData.title %></td>
                  <td><%= entry.productData.brand %></td>
                  <td><%= entry.products.quantity %></td>
                  <td><%= entry.products.size %></td>
                  <td><%= entry.totalAmount %></td>
                  <td><%= entry.productData.actualPrice %></td>
                  <td><%= entry.estimatedDelivery%></td>
                  <td><%= entry.deliveryType%></td>
                  <td><%= entry.paymentType%></td>
                  <td><%= entry.creationDate%></td>
                  <td>
                    <% }) %>
         
        </tbody>  
      </table>  
    </div>
    </div>
	  </div>
</body>  
<script>
$(document).ready(function(){
    $('#myTable').DataTable({
      responsive: true,
      "scrollX": true,
      "columnDefs": [
      { "width": "10px", "targets": 0 },
      { "width": "200px", "targets": 1 },
      { "width": "70px", "targets": 2 },
      { "width": "120px", "targets": 3 },
      { "width": "120px", "targets": 4 },

      { "width": "70px", "targets": 5 },
      { "width": "120px", "targets": 6 },

      { "width": "120px", "targets": 7 },
      { "width": "310px", "targets": 8 },

    ],
    
    });
    
});
</script>
</html> 