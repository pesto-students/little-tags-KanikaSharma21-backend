<canvas id="myChart1"  ></canvas>

<% var dates = [],values = []
productsData.forEach((order)=>dates.push(order.date))
productsData.forEach((order)=>values.push(order.value))
%>

<script>
    var ctx = document.getElementById('myChart1').getContext('2d');
    var getX = "<%= dates %>"
    var getY = "<%= values %>"
    var productData = getX.split(',')
    var labels = getY.split(",")
    var myChart1 = new Chart(ctx, {
        type: 'line',
        data: {
            labels:productData,
            datasets: [{
                label: 'Products Added In Last 30 days',
                data: labels,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    </script>