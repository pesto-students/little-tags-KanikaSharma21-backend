<!DOCTYPE html>
<html lang="en">
<head>
    <title>Full cart</title>
    <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<!--Export table buttons-->

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<link rel="stylesheet" href="/stylesheets/editproduct.css">

</head>
<body>
    <%- include('./partial/top-navbar.ejs') %>
  
  <%- include('./partial/sidebar.ejs') %>
   
    <div class="container">
        <div class="row">
                <div class="col-lg-3 col-md-offset-3"></div>
            <div class="col-lg-6 col-md-offset-3">
                <div class="row header" style="text-align:center;color:darkblue; font-weight: 600; text-decoration: underline; justify-content: center; margin: 0.5em 0em;  text-transform: uppercase;">
 

                    <h3>Edit Product</h3>
                    </div>
                <form action="<%= `/api/product/${product._id}` %>/?_method=PUT " method="POST" style="border:1px solid #dfdddd;  padding:1em; border-radius: 10px;">
                    <input hidden name="productId" value=<%= product._id %> >
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="category">Category Name: </label>
                                <input type="text" name="category" value="<%= product.category%>" id="category" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="brand">Brand: </label>
                                <input type="text" name="brand" id="brand" value="<%= product.brand%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="averageRating">Average rating: </label>
                                <input type="number" step="any" name="averageRating" value="<%= product.averageRating%>" id="averageRating" class="form-control">
                            </div> 
                             <div class="form-group">
                                <label for="totalRating">Total rating: </label>
                                <input type="number" step="any" value="<%= product.totalRating%>" id="totalRating" class="form-control" name="totalRating">
                            </div>
                            <div class="form-group">
                                <label for="title">Title </label>
                                <input type="text" name="title" value= "<%= product.title %>" id="title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="discountPercentage">Discount (%) </label>
                                <input type="number" id="discountPercentage" value="<%= product.discountPercentage %>" class="form-control" step="any" name="discountPercentage">
                            </div>
                            <div class="form-group">
                                <label for="actualPrice">Actual Price:  (Rs.)  </label>
                                <input type="number" id="actualPrice" value="<%= product.actualPrice%>" class="form-control" name="actualPrice">
                            </div>
                            
                            <div class="form-group">
                                <label for="image">Image: </label>
                                <input type="text" id="image" value="<%= product.image %>" class="form-control" name="image">
                            </div>
                            <div class="form-group">
                                <label for="subImages">Sub images: </label>
                                <textarea type="text" id="subImages" class="form-control"  name="subImages">
                                    <%= product.subImages %>
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label for="description">Description: </label>
                                <textarea type="text" id="description" class="form-control" name="description">
                                    <%= product.description %>
                                </textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-success">Save</button>
                            
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</body>
</html>